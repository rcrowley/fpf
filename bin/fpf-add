#!/bin/sh

#/ Usage: fpf-add -k<keyring> [--prefix=<prefix>] <archive>
#/   -k<keyring>       keyring URI
#/   --prefix=<prefix> installation prefix
#/   <archive>         archive URI

set -e

. "$(dirname "$(dirname "$0")")/lib/fpf.sh"

# The default prefix is the one in which the FPF tools are installed.
PREFIX="$(dirname "$(dirname "$0")")"

usage() {
	grep "^#/" "$0" | cut -c"4-" >&2
	exit "$1"
}
while [ "$#" -gt 0 ]
do
	case "$1" in
		-k|--keyring) KEYRING="$2" shift 2;;
		-k*) KEYRING="$(echo "$1" | cut -c"3-")" shift;;
		--prefix) PREFIX="$2" shift 2;;
		--prefix=*) PREFIX="$(echo "$1" | cut -c"10-")" shift;;
		-h|--help) usage 0;;
		-*) usage 1;;
		*) break;;
	esac
done
ARCHIVE="$1"
[ -z "$PREFIX" -o -z "$ARCHIVE" ] && usage 1
[ -z "$KEYRING" ] && KEYRING="$ARCHIVE/keyring.gpg"

LIB="$PREFIX/lib/fpf"
mkdir -p "$LIB"

# TODO Save a reference to the archive URL.

# Download the GPG public keyring and save it for later.
curl -o"$LIB/keyring.gpg" -s "$KEYRING" ||
wget -O"$LIB/keyring.gpg" -q "$KEYRING"
# TODO Download to a temporary directory and import the public key(s).
